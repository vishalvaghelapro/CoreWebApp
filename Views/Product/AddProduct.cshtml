@model CoreWebApp.Models.Product;
@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main id="main">
    <div class="col-lg-6">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Product</h5>

                <!-- Vertical Form -->
                <form asp-controller="Product" asp-action="SaveProduct" class="row g-3">
                    
                    <div class="col-12">
                        <label for="inputNanme4" class="form-label">Name</label>
                        <input asp-for="ProductName" type="text" class="form-control" id="Name" placeholder="Enter Name">
                    </div>

                    <div class="col-12">
                        <label for="ProductDesc" class="form-label">Description</label>
                        <input asp-for="ProductDesc" type="text" class="form-control" id="Description" placeholder="Enter Description">
                    </div>

                    <div class="col-12">
                        <label for="ProductPrice" class="form-label">Price</label>
                        <input asp-for="ProductPrice" type="text" class="form-control" id="Price" placeholder="Enter Price">
                    </div>
                @*     <div class="col-md-6">
                        <label for="Category" class="form-label">Category</label>
                        <select asp-for="Category" id="category" class="form-select">
                            <option selected>Choose Category...</option>
                            <option>...</option>
                        </select>
                    </div> *@
                    <select class="form-select" id="ProductCategory" name="ProductCategory">
                        <option value="">Select Category</option>  
                        @foreach (var category in ViewBag.categories)
                        {
                            <option value="@category.ProductCategory">@category.ProductCategory</option>
                        }
                    </select>
                    <div class="col-md-6">
                        <label for="Stock" class="form-label">Stock</label>
                        <input type="text" asp-for="ProductStock" class="form-control" id="Stock" placeholder="Enter Stocks">
                    </div>
               
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>

                </form>
                <!-- Vertical Form -->

            </div>
        </div>
    </div>
</main>
